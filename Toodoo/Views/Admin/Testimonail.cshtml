
@using portfolio005.ViewModel;
@model TestimonialVM
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="Testimonial" asp-controller="Admin"enctype="multipart/form-data">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            Enter Testimonial Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Review </label>
                        <input class="form-control" asp-for="Review">
                        <span asp-validation-for="Review" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Name </label>
                        <input class="form-control" asp-for=" Name">
                        <span asp-validation-for="Name" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Designation </label>
                        <input class="form-control" asp-for="Designation">
                        <span asp-validation-for="Designation" class="text-danger"> </span>

                    </div>

                </div>
                 <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Image </label>
                        <input class="form-control" asp-for="Image">
                        <span asp-validation-for="Image" class="text-danger"> </span>

                    </div>

                </div>
               
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="Add Testimonial" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>