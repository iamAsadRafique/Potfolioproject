@using portfolio005.Models;
@using portfolio005.ViewModel;
@model AboutVM
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="About" asp-controller="Admin"enctype="multipart/form-data">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            Enter your's Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Name </label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Description</label>
                        <input class="form-control" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">DoB </label>
                        <input class="form-control" asp-for="DoB">
                        <span asp-validation-for="DoB" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Age </label>
                        <input class="form-control" asp-for="Age">
                        <span asp-validation-for="Age" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Website </label>
                        <input class="form-control" asp-for="Website">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label"> Degree </label>
                        <input class="form-control" asp-for=" Degree">
                        <span asp-validation-for="Degree" class="text-danger"> </span>

                    </div>
                    </div>
                     <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">  phone </label>
                        <input class="form-control" asp-for=" phone">
                        <span asp-validation-for="phone" class="text-danger"> </span>

                    </div>
                    </div>
                     <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label"> Email </label>
                        <input class="form-control" asp-for=" Email">
                        <span asp-validation-for="Email" class="text-danger"> </span>

                    </div>
                    </div>
                     <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label"> City </label>
                        <input class="form-control" asp-for=" city">
                        <span asp-validation-for="city" class="text-danger"> </span>

                    </div>
                    </div>
                     <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label"> freelance </label>
                        <input class="form-control" asp-for="freelance">

                    </div>
                </div>
                       <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label"> Image </label>
                        <input class="form-control" asp-for="Image">
                        <span asp-validation-for="Image" class="text-danger"> </span>

                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="Add About" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div> 