@using portfolio005.Models;
@model Service
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="Services" asp-controller="Admin">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            Enter Services Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Service Name </label>
                        <input class="form-control" asp-for="ServiceName">
                        <span asp-validation-for="ServiceName" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">ServiceDescription </label>
                        <input class="form-control" asp-for="ServiceDescription">
                        <span asp-validation-for="ServiceDescription" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">color code </label>
                        <input class="form-control" asp-for="ColorCode">
                        <span asp-validation-for="ColorCode" class="text-danger"> </span>

                    </div>

                </div>

                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="Add Education" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>
