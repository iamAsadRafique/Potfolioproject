@using portfolio005.Models;
@model Education
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="Education" asp-controller="Admin">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            Enter Education Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Degree Name </label>
                        <input class="form-control" asp-for="Degree">
                        <span asp-validation-for="Degree" class="text-danger"> </span>
                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">StartYear </label>
                        <input class="form-control" asp-for=" Startyear">
                        <span asp-validation-for="Startyear" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">EndYear </label>
                        <input class="form-control" asp-for="Endyear">
                        <span asp-validation-for="Endyear" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Institute </label>
                        <input class="form-control" asp-for="Institute">
                        <span asp-validation-for="Institute" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Description </label>
                        <input class="form-control" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="Add Education" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>