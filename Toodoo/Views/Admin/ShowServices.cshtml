@using portfolio005.Models;
@model IEnumerable<Service>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10 justify-content-center">
            <br />
            <br />
            <h2>
                Service Detail
            </h2>
            <br />

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Service Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">ColorCode</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.ServiceName</td>
                            <td>@item.ServiceDescription</td>
                            <td>@item.ColorCode</td>


                            <td>
                                <a class="btn btn-primary" asp-action="UpdateService" asp-controller="Admin" asp-all-route-id="@item.Id">Update</a>
                            </td>

                            <td>
                                <a class="btn btn-danger" asp-action="DeleteService" asp-controller="Admin" asp-all-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>

                    }



                </tbody>
            </table>

        </div>

    </div>


</div>

