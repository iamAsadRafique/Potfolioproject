@using portfolio005.Models;
@model IEnumerable<Facts>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10 justify-content-center">
            <br />
            <br />
            <h2>
                Facts Detail
            </h2>
            <br />

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">HappyClients</th>
                        <th scope="col">HourOfSupport</th>
                        <th scope="col">Awards</th>
                        <th scope="col">Projects</th>
                        <th scope="col">Description</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.HappyClients</td>
                            <td>@item.HourOfSupport</td>
                            <td>@item.Awards</td>
                            <td>@item.Project</td>
                            <td>@item.Description</td>

                            <td>
                                <a class="btn btn-primary" asp-action="UpdateFacts" asp-controller="Admin" asp-all-route-id="@item.Id">Update</a>
                            </td>

                            <td>
                                <a class="btn btn-danger" asp-action="DeleteFacts" asp-controller="Admin" asp-all-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>

                    }








                </tbody>
            </table>

        </div>

    </div>


</div>