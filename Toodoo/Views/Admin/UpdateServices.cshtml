@using portfolio005.Models;
@model Service
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="UpdateServices" asp-controller="Admin">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            update Services Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Service Name </label>
                        <input class="form-control" asp-for="ServiceName">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">ID </label>
                        <input class="form-control" asp-for="Id" readonly>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Description </label>
                        <input class="form-control" asp-for="ServiceDescription">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">color code </label>
                        <input class="form-control" asp-for="ColorCode">

                    </div>

                </div>

                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="update Service" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>