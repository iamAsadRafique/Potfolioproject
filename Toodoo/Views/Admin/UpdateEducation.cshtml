
@using portfolio005.Models;
@model Education
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="UpdateEducation" asp-controller="Admin">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            Update Education Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Degree Name </label>
                        <input class="form-control" asp-for="Degree">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">StartYear </label>
                        <input class="form-control" asp-for=" Startyear">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">EndYear </label>
                        <input class="form-control" asp-for="Endyear">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Institute </label>
                        <input class="form-control" asp-for="Institute">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label">Description </label>
                        <input class="form-control" asp-for="Description">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="Update Education" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>