@using portfolio005.Models;
@model IEnumerable<Social>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10 justify-content-center">
            <br />
            <br />
            <h2>
                Social Detail
            </h2>
            <br />

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Twitter</th>
                        <th scope="col">Facebook</th>
                        <th scope="col">Instagram</th>
                        <th scope="col">linkdin</th>
                        <th scope="col">Skype</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Twitter</td>
                            <td>@item.FaceBook</td>
                            <td>@item.Intagram</td>
                            <td>@item.Linkdin</td>
                            <td>@item.Skype</td>

                            <td>
                                <a class="btn btn-primary" asp-action="UpdateSocial" asp-controller="Admin" asp-all-route-id="@item.Id">Update</a>
                            </td>

                            <td>
                                <a class="btn btn-danger" asp-action="DeleteSocial" asp-controller="Admin" asp-all-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>

                    }








                </tbody>
            </table>

        </div>

    </div>


</div>

