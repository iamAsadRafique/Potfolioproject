@using portfolio005.Models;
@model IEnumerable<Skill>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10 justify-content-center">
            <br />
            <br />
            <h2>
                Skill Detail
            </h2>
            <br />

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Percentage</th>

                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Percentage</td>


                            <td>
                                <a class="btn btn-primary" asp-action="UpdateSkill" asp-controller="Admin" asp-all-route-id="@item.Id">Update</a>
                            </td>

                            <td>
                                <a class="btn btn-danger" asp-action="DeleteSkill" asp-controller="Admin" asp-all-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>

                    }








                </tbody>
            </table>

        </div>

    </div>


</div>
