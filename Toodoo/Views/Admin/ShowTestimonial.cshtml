@using portfolio005.Models;
@model IEnumerable<Testimonial>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10 justify-content-center">
            <br />
            <br />
            <h2>
                Testimonial Detail
            </h2>
            <br />

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Review</th>
                        <th scope="col">Name</th>
                        <th scope="col">Desiganation</th>
                        <th scope="col">Image</th>
                        
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Review</td>
                            <td>@item.Name</td>
                            <td>@item.Designation</td>
                            <td>@item.Image</td>
                           

                            <td>
                                <a class="btn btn-primary" asp-action="UpdateTestimonial" asp-controller="Admin" asp-route-id="@item.Id">Update</a>
                            </td>

                            <td>
                                <a class="btn btn-danger" asp-action="DeleteTestimonial" asp-controller="Admin" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>

    </div>


</div>