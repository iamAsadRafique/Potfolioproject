@using portfolio005.Models;
@model Skill
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="Skill" asp-controller="Admin">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            Enter Skill Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"> </span>

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Percentage"></label>
                        <input class="form-control" asp-for="Percentage">
                        <span asp-validation-for="Percentage" class="text-danger"> </span>

                    </div>

                </div>


                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="Add Skill" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>
