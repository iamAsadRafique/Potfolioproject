@using portfolio005.Models;
@model Facts
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">
            <br />
            <form method="post" asp-action="UpdateFact" asp-controller="Admin">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <h2>
                            Update Facts Detail
                        </h2>

                    </div>

                </div>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="HappyClients"></label>
                        <input class="form-control" asp-for="HappyClients">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="HourOfSupport"></label>
                        <input class="form-control" asp-for="HourOfSupport">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Project"></label>
                        <input class="form-control" asp-for="Project">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Awards"></label>
                        <input class="form-control" asp-for="Awards">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Description"></label>
                        <input class="form-control" asp-for="Description">

                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <br />
                        <input type="submit" value="UpdateFact" class="btn btn-primary" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>