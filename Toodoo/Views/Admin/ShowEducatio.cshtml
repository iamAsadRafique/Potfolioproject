@using portfolio005.Models;
@model IEnumerable<Education>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10 justify-content-center">
            <br />
            <br />
            <h2>
                Educational Detail
            </h2>
            <br />

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Degree</th>
                        <th scope="col">Institute</th>
                        <th scope="col">StartYear</th>
                        <th scope="col">EndYear</th>
                        <th scope="col">Description</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Degree</td>
                            <td>@item.Institute</td>
                            <td>@item.Startyear</td>
                            <td>@item.Endyear</td>
                            <td>@item.Description</td>

                            <td>
                                <a class="btn btn-primary" asp-action="UpdateEducation" asp-controller="Admin" asp-route-id="@item.Id">Update</a>
                            </td>

                            <td>
                                <a class="btn btn-danger" asp-action="DeleteEducation" asp-controller="Admin" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>

                    }








                </tbody>
            </table>

        </div>

    </div>


</div>